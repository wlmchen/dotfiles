configuration {
	modi: "drun";
	width: 30;
	lines: 12;
	show-icons: true;
	font: "Hack Nerd Font 13";
	terminal: "st";
	disable-history: true;
	sidebar-mode: false;
	tokenize: true;
  	display-drun:"ïš¥";
	m: "-5";
	line-margin: 2;
	line-padding: 1;
	separator-style: "none";
	hide-scrollbar: true;
	window-format: "{w} {c}";
	/*fullscreen: true;*/
	columns: 1;
}

* {
	highlight: bold italic;

	bg: #282828;
	fg: #ebdbb2;
	accent: #b877db;

	background-color: @bg;
	text-color: @fg;
}

window {
/* 	padding: 10px 25px 25px 25px; /* top, right, bottom, left*/ */
	padding: 10px;
	/*padding:25px;*/
	background-color: @bg;
  	border-color: @fg;
  	border: 1;
	border-radius: 5px;
}

prompt, entry {
	text-color: @fg;
	padding: 8px;
}

element {
	border-radius: 5px;
	padding: 3px;
}

element selected {
	background-color: @fg;
	text-color: @bg;
}

button selected {
	background-color: @fg;
	text-color: @bg;
	border-radius: 0px;
	padding: 0px;
}

element-icon { size: 2.3ch ; }

